<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:gravity="center"
    android:padding="15dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout">

    <TextView
        android:text="24BDHealth"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="25dip"
        android:textColor="@color/headline"
        android:textSize="24.5sp"/>

    <Button
        android:id="@+id/searchdoctor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_margin="3dp"
        android:textColor="@drawable/button_text_color"
        android:text="Search Doctor"/>

    <Button
        android:id="@+id/searchospital"
        android:layout_width="fill_parent"
        android:background="@drawable/btn"
        android:layout_margin="3dp"
        android:textColor="@drawable/button_text_color"
        android:layout_height="wrap_content"
        android:text="Search Hospital"/>

    <Button
        android:id="@+id/newspaperheadlines"
        android:layout_width="fill_parent"
        android:layout_margin="3dp"
        android:background="@drawable/btn"
        android:textColor="@drawable/button_text_color"
        android:layout_height="wrap_content"
        android:text="Newspaper Headlines"/>

    <Button
        android:id="@+id/healthnews"
        android:layout_width="fill_parent"
        android:layout_margin="3dp"
        android:textColor="@drawable/button_text_color"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:text="Latest Health News"/>

    <Button
        android:id="@+id/healthtips"
        android:layout_width="fill_parent"
        android:layout_margin="3dp"
        android:textColor="@drawable/button_text_color"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:text="Health Tips"/>

    <TextView
        android:id="@+id/editor_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/divider"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:text="Powered By MicronTechno"
        android:textColor="@color/hospital"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="25dip"
        android:textSize="15sp"/>
</LinearLayout>